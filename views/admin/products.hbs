<script src="/javascripts/tableManager.js"></script>

  <script>
   
    //tableManager

    $('#tablemanager').tablemanager({
			firstSort: [[3,0],[2,0],[1,'asc']],
			disable: ["last"],
			appendFilterby: true,
			dateFormat: [[4,"dd-mm-yyyy"]],
			debug: true,
			vocabulary: {
				voc_filter_by: 'Filtra per',
				voc_type_here_filter: 'Scrivi qui per filtrare...',
				voc_show_rows: 'Mostra righe'
			},
			pagination: true,
			showrows: [10,20,50,100],
			disableFilterBy: [1]
		});





    //end tableManager

    function addCategory() {


      console.log("addCategory")


      $("#addCategoryForm").submit((e) => {
        e.preventDefault();

        $.ajax({
          url: "/admin/addCategory",
          method: "post",
          data: $("#addCategoryForm").serialize(),
          success: (response) => {
            if (response.exist) {
              console.log("exist")
              document.getElementById("categoryAlert").innerHTML = 'This Category Already Exist'
            } else {
              console.log("noexist")
              location.reload()

            }

          },
        });
      });
    }
  </script>










