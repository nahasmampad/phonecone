          <div class="mb-5 ms-2">

            <a href="/admin/addProduct" class=""><button type="button" class="btn btn-secondary"><i
                  class="bi bi-plus-circle-fill"></i>
                Add Product</button></a>


            {{!-- modal --}}
            <button type="button" class="btn btn-warning" data-bs-toggle="modal" data-bs-target="#modalTop">
              Add Category
            </button>

            <!-- Modal -->
            <div class="modal modal-top fade" id="modalTop" tabindex="-1">
              <div class="modal-dialog">
                <form class="modal-content" id="addCategoryForm">
                  <div class="modal-header">
                    <h5 class="modal-title" id="modalTopTitle">Add Category</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                  </div>
                  <div class="modal-body">
                    <div class="row">
                      <div class="col mb-3">
                        <p id="categoryAlert"></p>
                        <label for="nameSlideTop" class="form-label">Enter Category</label>
                        <input type="text" id="nameSlideTop" class="form-control" placeholder="Enter Category"
                          name="category" />
                      </div>
                    </div>

                    <div class="row">
                      <div class="col mb-3">
                        <label for="nameSlideTop" class="form-label">Discription</label>
                        <input type="text" id="nameSlideTop" class="form-control" placeholder="Enter Discriptino"
                          name="categoryDiscription" />
                      </div>
                    </div>

                  </div>
                  <div class="modal-footer">
                    <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">
                      Close
                    </button>
                    <button onclick="addCategory()" class="btn btn-primary">Save</button>
                  </div>
                </form>
              </div>
            </div>
            {{!-- modal --}}


            <div class="btn-group">
              <button type="button" class="btn btn-primary">Catogory</button>
              <button type="button" class="btn btn-primary dropdown-toggle dropdown-toggle-split"
                data-bs-toggle="dropdown" aria-expanded="false">
                <span class="visually-hidden">Toggle Dropdown</span>
              </button>
              <ul class="dropdown-menu">
                {{#each categoryList}}

                <li><a class="dropdown-item" href="/admin/getCategoryItems{{this.category}}">{{this.category}}</a>
                </li>
                {{/each}}

              </ul>
            </div>

          </div>





          <div class="card">

            <h5 class="card-header">Manage Product</h5>
            <div class="table-responsive text-nowrap">
              <table class="table tablemanager" id="tablemanager">
                <thead>
                  <tr>
                    <th>image</th>
                    <th>product</th>
                    <th>Catagory</th>
                    <th>price</th>
                    <th>actions</th>
                  </tr>
                </thead>
                <tbody class="table-border-bottom-0">

                  {{#each product}}
                  <tr>
                    <td>
                      <div class="imgCont">
                        <img src="/images/productimg/{{this.image.[0]}}" alt="">
                      </div>
                    </td>
                    <td>{{this.productName}}</td>
                    <td>
                      {{this.category}}
                    </td>
                    <td>₹ {{this.price}}</td>
                    <td>
                      <a href="/admin/editProduct?id={{this._id}}"><button type="button" class="btn btn-primary"><i
                            class="bi bi-pencil-square"></i></button></a>

                      <a href="/admin/productView{{this._id}}"><button type="button" class="btn btn-secondary"><i
                            class="bi bi-eye-fill"></i></button></a>

                      <a href="/admin/deleteProduct?id={{this._id}}" class="btn btn-Danger"
                        onclick="return confirm('Are you sure you want to delete {{this.productName}}?');"><i
                          class="bi bi-trash-fill"></i></button></a>


                    </td>
                  </tr>

                  {{/each}}


            </div>
                </tbody>
              </table>
          </div>
