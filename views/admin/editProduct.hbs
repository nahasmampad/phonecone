      <div class="content-wrapper  mt-5">
        <div class="container-xxl flex-grow-1 container-p-y">


          <!-- Content start -->


          <div class="container">
            navbar
            <div class="row">
              <div class="col-md-6 col-sm-12">

                <div class="card mb-4">
                  <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Edit Product</h5>
                    <small class="text-muted float-end">Fill the Form</small>
                  </div>
                  <div class="card-body">
                    <form action="/admin/editProduct/{{product._id}}" method="POST">
                      <div class="mb-3">
                        <label class="form-label" for="basic-default-fullname">Product Name</label>
                        <input type="text" class="form-control" id="basic-default-fullname" name="productName"
                          value="{{product.productName}}" />
                      </div>
                      <div class="mb-3">
                        <label class="form-label" for="basic-default-company">Company</label>
                        <input type="text" class="form-control" id="basic-default-company" name="company"
                          value="{{product.company}}" />
                      </div>
                      <div class="mb-3">

                        <div class="input-group input-group-merge">


                          <div class="mb-3"><select class="form-select" aria-label="Default select example"
                              name="category">
                              <option selected>{{product.category}}</option>
                              <option value="Mobile">Mobile</option>
                              <option value="Headset">Headset</option>
                              <option value="Charger">Charger</option>
                              <option value="Powerbank">Power bank</option>
                            </select></div>







                        </div>

                      </div>
                      <div class="mb-3">
                        <label class="form-label" for="basic-default-phone">price</label>
                        <input type="number" id="basic-default-phone" class="form-control phone-mask" name="price"
                          value="{{product.price}}" />
                      </div>


                      <div class="mb-3">
                        <label class="form-label" for="basic-default-phone">Avilable Quantity</label>
                        <input type="number" id="basic-default-phone" class="form-control phone-mask" name="quantity"
                          value="{{product.quantity}}" />
                      </div>



                      <div class="mb-3">
                        <label class="form-label" for="basic-default-message">About Product</label>

                        <input id="basic-default-message" class="form-control" name="discription"
                          value="{{product.discription}}">
                      </div>


                      <div class="mb-3">
                        <label class="form-label" for="basic-default-phone">Images</label>
                        <div class="imgContainer">

                          <div class="imgcon">
                            <img src="/images/productimg/{{product.image.[0]}}" alt="">
                          </div>

                          <div class="imgcon">
                            <img src="/images/productimg/{{product.image.[1]}}" alt="">
                          </div>

                          <div class="imgcon">
                            <img src="/images/productimg/{{product.image.[2]}}" alt="">
                          </div>

                          <div class="imgcon">
                            <img src="/images/productimg/{{product.image.[3]}}" alt="">
                          </div>

                        </div>
                        <input type="file" id="basic-default-phone" class="form-control phone-mask" name="image"
                          multiple />
                      </div>





                      <button type="submit" class="btn btn-primary">Submit</button>
                    </form>
                  </div>
                </div>


              </div>



              {{!-- additional --}}
              <div class="col-md-6 col-sm-12">

                <div class="card mb-4">
                  <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Add Aditional Details</h5>
                    <small class="text-muted float-end">Fill the Form</small>
                  </div>
                  <div class="card-body">
                    <form action="/admin/addProductAditionalDetails/{{product._id}}" method="POST">
                      <div class="mb-3">
                        <label class="form-label" for="basic-default-fullname">Remark</label>
                        <input type="text" class="form-control" id="basic-default-fullname" name="Remark"
                          value="{{product.Remark}}" />
                      </div>
                      <div class="mb-3">
                        <label class="form-label" for="basic-default-company">Bank Offers</label>
                        <input type="text" class="form-control" id="basic-default-company" name="bankOffer"
                        value="{{product.bankOffer}}"
                         />
                      </div>
                      <div class="mb-3">

                        <div class="input-group input-group-merge">


                          <div class="mb-3"><select class="form-select" aria-label="Default select example"
                              name="rating">
                              <option selected>{{product.rating}}</option>
                              <option value="1">1</option>
                              <option value="2">2</option>
                              <option value="3">3</option>
                              <option value="4">4</option>
                              <option value="5">5</option>
                            </select></div>







                        </div>

                      </div>
                      <div class="mb-3">
                        <label class="form-label" for="basic-default-phone">Discount (in persentage)</label>
                        <input type="number" id="basic-default-phone" class="form-control phone-mask" name="discount" />
                      </div>









                      <div class="mb-3">



                      </div>





                      <button type="submit" class="btn btn-primary">Submit</button>
                    </form>
                  </div>
                </div>


              </div>

              {{!-- additional end --}}
            </div>
          </div>









