<div class="container mt-5">
  



  <table class="table table-striped mt-5">
    <thead>
      <tr>
        <th scope="col">Sl No</th>
        <th scope="col">IMAGE</th>
        <th scope="col">Product Name</th>
        <th scope="col">Catagory</th>
        <th scope="col">Price</th>
        <th scope="col">Manage Product</th>
      </tr>
    </thead>
    <tbody>
      {{#each product}}
      <tr >
        <th scope="row">{{@index}}</th>
        <td><img class="img-thumbnail" style="width:100px;  height:100px;" src="/images/productimg/{{this.image.[0]}}" alt=""></td>
        <td>{{this.productName}}</td>
        <td>{{this.catogory}}</td>
        <td>{{this.price}}</td>
        <td><a href="/admin/editProduct?id={{this._id}}"><button type="button" class="btn btn-primary"><i
                class="bi bi-pencil-square"
              ></i></button></a>

          <a href="/admin/productView{{this._id}}"><button type="button" class="btn btn-secondary"><i
                class="bi bi-eye-fill"
              ></i></button></a>

          <a href="/admin/deleteProduct?id={{this._id}}" class="btn btn-Danger" onclick="return confirm('Are you sure you want to delete {{this.productName}}?');"><i
                class="bi bi-trash-fill"
              ></i></button></a>

        </td>

      </tr>
      {{/each}}

    </tbody>
  </table>
</div>