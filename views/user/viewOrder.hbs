<link rel="stylesheet" href="/stylesheets/orderView.css" />
<title>Order View</title>
<section>
    <div class="container mt-5">
        <div class="row">
            {{#each orders}}
            {{#each this.orders}}
            <div class="col-12">
                <div class="mainWaraper">
                    <div class="container">

                        <div class="row">
                            <div class="col-4">
                                <div class="flex">
                                    <div class="proImage">
                                        <img src="/images/productimg/{{this.image.[0]}}" alt="">

                                    </div>
                                    <div class="ms-3 mt-3 flexjc ">
                                        <p>
                                            <span class="fw-bold">{{this.productName}}</span> <br>
                                            <span>{{this.category}}</span> <br>
                                            â‚¹ {{this.price}}


                                        </p>

                                    </div>
                                </div>

                            </div>
                            <div class="col-4 flexjc">
                                <div class="flexjc">
                                    <p>

                                        Status: <span class="fw-bold"> {{../this.status}}</span>  <br>
                                        Quantity: <span class="fw-bold">{{../this.quantity}} item</span> <br>
                                    </p>

                                </div>

                            </div>
                            <div class="col-4 flexjc">
                                <button onclick="cancelOrders('{{../this.delId}}','{{this._id}}')"
                                    class="btn btn-outline-danger me-3"><i class="bi bi-x-circle"></i></button>
                                <a href="/orderDetails/{{this._id}}/{{../this.delId}}"><button type="button"
                                        class="btn btn-outline-dark"><i class="bi bi-eye"></i></button></a>



                            </div>
                        </div>

                    </div>

                </div>
            </div>
            {{/each}}
            {{/each}}
        </div>
    </div>


</section>

<script>
    function cancelOrders(ordId, proId) {
        
        console.log('cancel')
        $.ajax({
            url: '/deleteOrders',
            method: "post",
            data: {
                ordId: ordId,
                proId: proId

            },
            success: (response) => {
                location.reload()
            },
        });
    }
</script>