<div class="mt-5" id="catogory">
  <h3 class="text-center">Catogory</h4>
    <div class="container mt-5 border-bottom border-top  p-3">
      <div class="row d-flex justify-content-around align-items-center categoryMain">
        {{#each category}}
        <div class="col-lg-3 col-md-6 col-sm-12">
          <a href="/userCatogory{{this.category}}" class="text-decoration-none">
